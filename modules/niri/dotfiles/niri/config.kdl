// ────────────── Startup Applications ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Miscellaneous#spawn-sh-at-startup

    spawn-sh-at-startup "/usr/lib/polkit-kde-authentication-agent-1 &" // Polkit
    // spawn-sh-at-startup "swww-daemon" // Wallpaper daemon (managed by Noctalia)
    // spawn-sh-at-startup "swww img /usr/share/wallpapers/cachyos-wallpapers/Skyscraper.png" // Set wallpaper (managed by Noctalia)
    spawn-sh-at-startup "qs -c noctalia-shell" // Noctalia shell
    spawn-sh-at-startup "~/.config/niri/scripts/auto-split-windows &" // Auto-split windows
    // Workspace-to-monitor assignment is now handled via open-on-output in workspace definitions

    prefer-no-csd // Disable program decorations
    screenshot-path null // Disable screenshot saving

// ────────────── Layout Settings ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Layout

    layout {
        gaps 12 // Gap between windows (matches GlazeWM 10px)
        center-focused-column "never" // Don't auto-center focused column

        preset-column-widths {
            proportion 0.33333
            proportion 0.5
            proportion 0.66667
        }

        focus-ring {
            width 3
            active-color "#9ccfd8" // Matches GlazeWM focused border
            inactive-color "#ebbcba" // Matches GlazeWM other windows border
        }

        shadow {
            softness 30
            spread 5
            offset x=0 y=5
            color "#0007"
        }

        struts {}
    }

// ────────────── Animation Settings ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Animations
    animations {
        workspace-switch {
            spring damping-ratio=1.0 stiffness=1000 epsilon=0.0001
        }
        window-open {
            duration-ms 200
            curve "ease-out-quad"
        }
        window-close {
            duration-ms 200
            curve "ease-out-cubic"
        }
        horizontal-view-movement {
            spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
        }
        window-movement {
            spring damping-ratio=1.0 stiffness=800 epsilon=0.0001
        }
        window-resize {
            spring damping-ratio=1.0 stiffness=1000 epsilon=0.0001
        }
        config-notification-open-close {
            spring damping-ratio=0.6 stiffness=1200 epsilon=0.001
        }
        screenshot-ui-open {
            duration-ms 300
            curve "ease-out-quad"
        }
        overview-open-close {
            spring damping-ratio=1.0 stiffness=900 epsilon=0.0001
        }
    }

// ────────────── Window Rules ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Window-Rules

    // ─── Workspace term: Terminal ───
    window-rule {
        match app-id=r#"wezterm|org.wezfurlong.wezterm"#
        exclude app-id=r#"YaziTerm"#
        open-on-workspace "term"
    }
    // Block out password managers from screencasts.
    window-rule {
        match app-id=r#"^org\.keepassxc\.KeePassXC$"#
        match app-id=r#"^org\.gnome\.World\.Secrets$"#
        block-out-from "screencast"
    }
    // Block out mako notifications from screencasts.
    layer-rule {
        match namespace="^notifications$"
        block-out-from "screencast"
    }
    // Indicate screencasted windows with red colors.
        window-rule {
        match is-window-cast-target=true
    
        focus-ring {
            active-color "#f3eba8"
            inactive-color "#7d0d2d"
        }
    
        border {
            inactive-color "#7d0d2d"
        }
    
        shadow {
            color "#7d0d2d70"
        }
    
        tab-indicator {
            active-color "#f38ba8"
            inactive-color "#7d0d2d"
        }
    }

    // ─── Workspace remote: Remote Desktop ───
    window-rule {
        match app-id=r#"mremoteng|remmina"#
        open-on-workspace "remote"
    }

    // ─── Workspace chatgpt: ChatGPT ───
    window-rule {
        match app-id=r#"chatgpt|com.openai.chat|chrome-chat\.openai\.com__-Default"#
        open-on-workspace "chatgpt"
    }
    window-rule {
        match title=r#"ChatGPT"#
        open-on-workspace "chatgpt"
    }

    // ─── Workspace code: Code Editor (Cursor) ───
    window-rule {
        match app-id=r#"cursor|Cursor"#
        open-on-workspace "code"
    }

    // ─── Workspace youtube: YouTube ───
    window-rule {
        match app-id=r#"chrome-(music\.youtube\.com|youtube\.com)__-Default"#
        open-on-workspace "youtube"
    }
    window-rule {
        match title=r#"YouTube"#
        open-on-workspace "youtube"
    }

    // ─── Workspace personal: Personal / X ───
    window-rule {
        match app-id=r#"chrome-(x\.com|twitter\.com)__-Default"#
        open-on-workspace "personal"
    }
    window-rule {
        match title=r#"^X$"#
        open-on-workspace "personal"
    }

    // ─── Workspace browser: Browser (Firefox, Edge) ───
    window-rule {
        match app-id=r#"firefox|org\.mozilla\.firefox|chromium|org\.chromium\.Chromium|brave|brave-browser|google-chrome|microsoft-edge|edge|msedge"#
        exclude title=r#"YouTube"#
        exclude title=r#"Claude"#
        exclude title=r#"ChatGPT"#
        exclude title=r#"Gmail"#
        exclude title=r#"Inbox"#
        exclude title=r#"Outlook"#
        exclude title=r#"^X$"#
        open-on-workspace "browser"
    }

    // ─── Workspace personal: Vesktop / Discord ───
    window-rule {
        match app-id=r#"vesktop|WebCord"#
        open-on-workspace "personal"
    }

    // ─── Workspace keepass: KeePassXC ───
    window-rule {
        match app-id=r#"org.keepassxc.KeePassXC|keepassxc"#
        exclude title=r#"^Auto-Type"#
        open-on-workspace "keepass"
    }

    // ─── Workspace teams: Teams / Communication ───
    window-rule {
        match app-id=r#"teams|ms-teams|teams-for-linux|avaya"#
        open-on-workspace "teams"
    }

    // ─── Workspace mail: Outlook / Mail ───
    window-rule {
        match app-id=r#"outlook|olk|hxoutlook|org\.gnome\.Evolution|thunderbird"#
        open-on-workspace "mail"
    }
    window-rule {
        match title=r#"Outlook"#
        open-on-workspace "mail"
    }
    window-rule {
        match title=r#"Gmail|Inbox"#
        open-on-workspace "mail"
    }

    // ─── Workspace obsidian: Obsidian, Documents ───
    window-rule {
        match app-id=r#"obsidian|md\.obsidian\.Obsidian|libreoffice-writer|onlyoffice-desktopeditors"#
        open-on-workspace "obsidian"
    }

    // ─── Workspace claude: Claude ───
    window-rule {
        match title=r#"Claude"#
        open-on-workspace "claude"
    }
    window-rule {
        match app-id=r#"claude"#
        open-on-workspace "claude"
    }

    // ─── Floating Windows ───

    // Dropdown terminal - matched by title, floats centered at 70%
    window-rule {
        match title="dropdown-terminal"
        open-floating true
        default-column-width { proportion 0.7; }
        default-window-height { proportion 0.7; }
    }

    window-rule {
        match title="YaziTerm"
        open-floating true
        default-column-width { proportion 0.9; }
        default-window-height { proportion 0.85; }
    }

    window-rule {
        match title="BtopTerm"
        open-floating true
        default-column-width { proportion 0.9; }
        default-window-height { proportion 0.85; }
    }

    window-rule {
        match title="PulsemixerTerm"
        open-floating true
        default-column-width { proportion 0.7; }
        default-window-height { proportion 0.7; }
    }

    window-rule {
        match app-id=r#"ripdrag"#
        open-floating true
    }

    window-rule {
        match app-id=r#"github|com.github.pwa"#
        open-floating true
        default-column-width { proportion 0.75; }
    }

    window-rule {
        match app-id=r#"org.gnome.Nautilus|thunar|pcmanfm|nemo"#
        open-floating true
        default-column-width { proportion 0.65; }
        default-window-height { proportion 0.65; }
    }

    // GNOME portal file picker sizing
    window-rule {
        match app-id=r#"org\.freedesktop\.impl\.portal\.desktop\.gnome|xdg-desktop-portal-gnome|org\.gnome\.Portal"#
        open-floating true
        default-column-width { proportion 0.85; }
        default-window-height { proportion 0.85; }
    }

    window-rule {
        match app-id=r#"org.kde.polkit-kde-authentication-agent-1|polkit"#
        open-floating true
    }

    window-rule {
        match app-id="com.gabm.satty"
        open-floating true
        min-width 730
        min-height 300
    }

    // ─── Picture-in-Picture ───
    window-rule {
        match app-id=r#"firefox$"# title="^Picture-in-Picture$"
        open-floating true
    }

    window-rule {
        match title=r#"[Pp]icture.in.[Pp]icture"#
        open-floating true
    }

    // ─── KeePassXC Auto-Type ───
    window-rule {
        match app-id=r#"org.keepassxc.KeePassXC"# title=r#"^Auto-Type"#
        open-floating true
    }

    window-rule {
        geometry-corner-radius 20 // Set every window radius to 20
        clip-to-geometry true
        opacity 0.9
    }

// ────────────── Noctalia Integration ──────────────
// https://docs.noctalia.dev/getting-started/compositor-settings/niri/

    debug {
        // Allows notification actions and window activation from Noctalia.
        honor-xdg-activation-with-invalid-serial
    }

    // Optional Noctalia wallpaper integration (pick one option).
    // Option 1: Blurred overview wallpaper (requires "Enable overview wallpaper" ON).
    /-layer-rule {
        match namespace="^noctalia-overview*"
        place-within-backdrop true
    }

    // Option 2: Stationary wallpaper (requires "Enable overview wallpaper" OFF).
    /-layer-rule {
        match namespace="^noctalia-wallpaper*"
        place-within-backdrop true
    }
    /-layout {
        background-color "transparent"
    }
    /-overview {
        workspace-shadow {
            off
        }
    }

    // Option 3: Flat colored overview (requires "Enable overview wallpaper" OFF).
    /-overview {
        // Choose your favorite color.
        backdrop-color "#26233a"
    }

// ────────────── Environment Variables ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Miscellaneous#environment

    environment {
        DISPLAY ":1"
        ELECTRON_OZONE_PLATFORM_HINT "auto"
        QT_QPA_PLATFORM "wayland"
        QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
        XDG_SESSION_TYPE "wayland"
        XDG_CURRENT_DESKTOP "niri"
        SSH_AUTH_SOCK "/run/user/1000/ssh-agent.socket"
    }

    hotkey-overlay {
        skip-at-startup
    }

include "./noctalia.kdl"

// For documentation and full reference, see: https://github.com/YaLTeR/niri/wiki

// ────────────── Input Configuration ──────────────
// Niri configuration for CachyOS
// https://github.com/YaLTeR/niri/wiki/Configuration:-Input

input {
    keyboard {
        xkb {
            layout "us"
            variant "altgr-intl"
        }
        numlock // Enable numlock on startup
    }

    touchpad {
        tap // Enable tap-to-click
        natural-scroll // Enable natural (macOS-style) scrolling
    }

    // Set MOD key to Alt
    mod-key "Alt"

    // focus-follows-mouse disabled to match GlazeWM config
    workspace-auto-back-and-forth // Enable workspace back & forth switching (matches GlazeWM toggle_workspace_on_refocus)
}

// ────────────── Output Configuration ──────────────
// You can run `niri msg outputs` to get the correct name for your displays.
// You will have to remove "/-" and edit it before it takes effect.
// https://github.com/YaLTeR/niri/wiki/Configuration:-Outputs

output "Microtek International Inc. GF340C 0000000000000" {
    mode "3440x1440@165.001" // Set resolution and refresh rate
    scale 1 // No scaling (use 2 for HiDPI)
    transform "normal"
    position x=0 y=0
}

output "Dell Inc. DELL G2722HS G3N92H3" {
    mode "1920x1080@60.000" // Set resolution and refresh rate
    scale 1 // No scaling (use 2 for HiDPI)
    transform "270"
    position x=3440 y=0
}

// ────────────── Workspaces ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Named-Workspaces
// Pre-create all workspaces with monitor assignments
// Ultrawide (left/primary) for most workspaces, Dell (right) for remote, teams, work

workspace "term" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "remote" { open-on-output "Dell Inc. DELL G2722HS G3N92H3"; }
workspace "chatgpt" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "code" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "browser" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "vesktop" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "keepass" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "teams" { open-on-output "Dell Inc. DELL G2722HS G3N92H3"; }
workspace "mail" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "extra2" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "obsidian" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "youtube" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "claude" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "work" { open-on-output "Dell Inc. DELL G2722HS G3N92H3"; }
workspace "personal" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }
workspace "scratchpad" { open-on-output "Microtek International Inc. GF340C 0000000000000"; }


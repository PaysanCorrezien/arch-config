{
  "id": "ccusage-bar",
  "name": "CC Usage Bar",
  "version": "0.1.0",
  "minNoctaliaVersion": "3.6.0",
  "author": "You",
  "license": "MIT",
  "description": "Show Claude Code usage in the bar using ccusage.",
  "tags": ["Bar", "Claude", "Usage"],
  "entryPoints": {
    "main": "Main.qml",
    "barWidget": "BarWidget.qml",
    "panel": "Panel.qml",
    "settings": "Settings.qml"
  },
  "dependencies": {
    "plugins": []
  },
  "metadata": {
    "defaultSettings": {
      "refreshIntervalSeconds": 60,
      "showInBar": true,
      "watcherEnabled": false,
      "watcherMessage": "hi",
      "watcherCheckIntervalSeconds": 60,
      "watcherRenewWindowSeconds": 120,
      "watcherResetSeconds": 18000,
      "watcherLastActivityFile": "$HOME/.claude-last-activity",
      "watcherUseFallback": true,
      "watcherNotifyBeforeReset": false,
      "watcherNotifyAfterReset": false
    }
  }
}

// Workstation monitor configuration
// Ultrawide GF340C (primary) + Dell P2724DEB (secondary)

output "Microtek International Inc. GF340C 0000000000000" {
    mode "3440x1440@59.999" // Conservative refresh for multi-display stability
    scale 1 // No scaling (use 2 for HiDPI)
    transform "normal"
    position x=0 y=0
}

output "Dell Inc. DELL P2724DEB 4LXTF84" {
    mode "2560x1440@59.951" // Set resolution and refresh rate
    scale 1 // No scaling (use 2 for HiDPI)
    transform "normal"
    position x=3440 y=0
}


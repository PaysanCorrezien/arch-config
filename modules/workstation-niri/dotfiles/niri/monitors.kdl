// Workstation monitor configuration

output "Microtek International Inc. GF340C 0000000000000" {
    mode "3440x1440@165.001" // Set resolution and refresh rate
    scale 1 // No scaling (use 2 for HiDPI)
    transform "normal"
    position x=0 y=0
}

output "Dell Inc. DELL G2722HS G3N92H3" {
    mode "1920x1080@60.000" // Set resolution and refresh rate
    scale 1 // No scaling (use 2 for HiDPI)
    transform "270"
    position x=3440 y=0
}

